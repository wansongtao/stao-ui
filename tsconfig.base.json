{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "baseUrl": ".",
    "jsx": "preserve",
    "sourceMap": false,
    "moduleResolution": "node",
    "strict": true,
    "allowJs": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": false,
    "rootDirs": [
      "./",
      "./packages/components"
    ],
    "types": [],
    "paths": {
      "@stao-ui/*": [
        "packages/*"
      ],
      "@/*": [
        "packages/components/src/*"
      ],
      "@utils/*": [
        "packages/utils/src/*"
      ],
    }
  }
}